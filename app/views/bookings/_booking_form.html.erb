<div class="booking-form">
  <div class="booking-form-contents">
    <%= form_with(model:[@user,@booking], local: true) do |form| %>
    <div class="price">
      <label class="form-text">利用料金</label>
      <%= form.text_field :price, class: "booking-price-form" %>
    </div>
  <div class="text">
    <label class="form-text">特記事項</label>
    <%= form.text_area :text,class: "booking-text-form" %>
  </div>
  <div class="start_time">
    <label class="form-text">日付</label>
    <%= form.date_select :start_time, {}, {class: 'form-control', style: 'display: inline-block;width: auto;'} %>
  </div>
  <div class="booking-submit">
    <%= form.submit "登録", class:"booking-submit-btn" %>
  </div>
<% end %>
